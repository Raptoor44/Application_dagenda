<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_view_list_taches"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="218dp"
                android:layout_height="163dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="218dp"
                    android:layout_height="178dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="18dp"
                    app:srcCompat="@drawable/liste_de_taches_presque_parfaite" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="561dp"
                android:layout_height="165dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:id="@+id/id_titre_adapter_tache"
                    android:layout_width="480dp"
                    android:layout_height="83dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="22dp"
                    android:textColor="@color/white" />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/id_layout_bas"
            android:layout_width="match_parent"
            android:layout_height="218dp">

            <TextView
                android:id="@+id/id_text_view_list_taches"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginBottom="67dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>